package br.com.residencia.poo.exercicios;

import java.util.Scanner;

public class F {

	public static void main(String[] args) {
		
		int idade1, idade2, idade3, idade4, idade5, idade, soma;
		Scanner ler = new Scanner(System.in);
		
		System.out.println("Qual a idade do primeiro colega?");
		idade1 = ler.nextInt();
		
		System.out.println("Qual a idade do segundo colega?");
		idade2 = ler.nextInt();
		
		System.out.println("Qual a idade do terceiro colega?");
		idade3 = ler.nextInt();
		
		System.out.println("Qual a idade do quarto colega?");
		idade4 = ler.nextInt();
		
		System.out.println("Qual a idade do quinto colega?");
		idade5 = ler.nextInt();
		
		System.out.println("Qual a sua idade?");
		idade = ler.nextInt();
		
		soma = idade1+idade2+idade3+idade4+idade5+idade;
		
		System.out.println("A soma do nosso Tempo de Vida Ã©: "+ soma);
		
		ler.close();
				
	}
}
