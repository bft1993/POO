package br.com.residencia.poo.aula1;

public class TerceiroExercicio {

	public static void main(String[] args) {
		System.out.println("Digite seu nome: ");
		leia(name)
		limpa()
		System.out.println("Digite sua disciplina: ");
		leia(disciplina)
		limpa()
		System.out.println("Digite sua primeira nota: \n");
		leia(nota1)
		System.out.println("Digite sua segunda nota: \n");
		leia(nota2)
		System.out.println("Digite sua terceira nota: \n");
		leia(nota3)
		
		para(int cont=1, cont<=3, cont++){
			System.out.println("Insira a nota", cont, ": ");
			leia(nota)
			totalNotas += nota
		}
		
		int cont=1
		enquanto (cont<=3){
			System.out.println("Insira a nota", cont, ": ");
			leia(nota)
			totalNotas += nota
			cont++
		}
		int cont=1
		faca{
			System.out.println("Insira a nota", cont, ": ");
			leia(nota)
			totalNotas += nota
			cont++
		}
		enquanto (cont<=3)
		limpa()
		media = totalNotas/3
		System.out.println("\nOlá, ", name, "\n");
		System.out.println("Na disciplina ", disciplina, " a média é ", media);
		}
	}

}
